/**
 * @title 带按钮的面板
 * @renderModel right
 */
import { Panel, PanelHeader, PanelBody } from 'earth-ui/lib/Panel'
import Button from 'earth-ui/lib/Button'
import message from 'earth-ui/lib/message'

const PanelWithButtons = () => {
  return (
    <Panel title="My Panel">
      <PanelHeader>
        <Button type="primary" micro>one</Button>
        <Button type="secondary" micro>two</Button>
        <Button type="tertiary" micro onClick={()=> message.success('Clicked!')}>three</Button>
      </PanelHeader>
      <PanelBody>
        The classic Panel with buttons looks like this.
      </PanelBody>
    </Panel>
  )
}

/**
 * @title 带Tab的面板
 * @renderModel right
 */
import { Panel, PanelHeader, PanelBody } from 'earth-ui/lib/Panel'
import { Tabs, TabList, Tab, TabPanel } from 'earth-ui/lib/Tabs'
import message from 'earth-ui/lib/message'

const PanelWithTabs = () => {
  return (
    <Panel>
      <PanelHeader>
        <Button type="primary" micro>one</Button>
        <Button type="secondary" micro>two</Button>
        <Button type="tertiary" micro onClick={()=> message.success('Clicked!')}>three</Button>
      </PanelHeader>
      <PanelBody>
        <Tabs>
          <TabList>
            <Tab>One</Tab>
            <Tab>Two</Tab>
            <Tab>Three</Tab>
          </TabList>
          <TabPanel tab="One">Content of Tab Panel 1</TabPanel>
          <TabPanel tab="Two">Content of Tab Panel 2</TabPanel>
          <TabPanel tab="Three">Content of Tab Panel 3</TabPanel>
        </Tabs>
      </PanelBody>
    </Panel>
  )
}

@component Panel
@component Panel/PanelHeader
@component Panel/PanelBody
